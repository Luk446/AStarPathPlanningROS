<launch>
  <!-- Include the base robot and rviz launch -->
  <include file="$(find rosbot_bringup)/launch/rosbot_rviz.launch"/>

  <!-- Launch SLAM Toolbox in asynchronous mode -->
  <node pkg="slam_toolbox" type="async_slam_toolbox_node" name="slam_toolbox_node" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="scan_topic" value="/scan"/>
    <param name="map_frame" value="map"/>
    <param name="resolution" value="0.1"/>
    <!-- You can add more tuning parameters here if needed -->
    <!-- See slam_toolbox documentation for config options -->
  </node>
</launch>

